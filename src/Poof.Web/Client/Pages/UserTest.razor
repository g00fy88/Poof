@page "/usertest"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Newtonsoft.Json.Linq
@using Poof.Talk.Snaps.User.Discovery
@using Yaapii.Atoms.Text
@attribute [Authorize]
@inject IApi api

<h1>Nearby Users</h1>

<p>This component demonstrates my own private api.</p>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @foreach (var user in users.Nodes("[*]"))
    {
        <div>id: @user.Value("id") - mail: @user.Value("mail") @if (new BoolOf(user.Value("me")).Value()) { <a>this is me!!</a> }</div>
    }
}

@code {
    private IJSON users;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            users =
                new AwGetNearbyUsers.Json(
                    await api.Private(new DmGetNearbyUsers(), "").Content()
                );
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }

}
