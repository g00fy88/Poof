@page "/usertest"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Newtonsoft.Json.Linq
@attribute [Authorize]
@inject HttpClient Http

<h1>Nearby Users</h1>

<p>This component demonstrates my own private api.</p>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @foreach (var user in users)
    {
        <div>id: @user["id"] - mail: @user["mail"] @if (bool.Parse(user["me"].ToString())) { <a>this is me!!</a> }</div>
    }
}

@code {
    private JArray users;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var content = await Http.GetStringAsync("private/user/discovery/get-nearby-users");
            users = JArray.Parse(content);
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }

}
